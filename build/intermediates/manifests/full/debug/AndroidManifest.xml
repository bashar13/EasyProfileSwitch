<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bashar.easyprofileswitch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bashar.easyprofileswitch.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bashar.easyprofileswitch.EditProfileActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bashar.easyprofileswitch.UpdateProfileActivity"
            android:label="@string/title_activity_update_profile"
            android:parentActivityName="com.bashar.easyprofileswitch.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bashar.easyprofileswitch.MainActivity" />
        </activity>
        <activity
            android:name="com.bashar.easyprofileswitch.HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName="com.bashar.easyprofileswitch.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bashar.easyprofileswitch.MainActivity" />
        </activity>
        <activity
            android:name="com.bashar.easyprofileswitch.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.bashar.easyprofileswitch.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bashar.easyprofileswitch.MainActivity" />
        </activity>
        <activity
            android:name="com.bashar.easyprofileswitch.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.bashar.easyprofileswitch.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bashar.easyprofileswitch.MainActivity" />
        </activity>
        <activity
            android:name="com.bashar.easyprofileswitch.ProfileSettings"
            android:label="@string/title_activity_profile_settings"
            android:parentActivityName="com.bashar.easyprofileswitch.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bashar.easyprofileswitch.SettingsActivity" />
        </activity>

        <receiver
            android:name="com.bashar.easyprofileswitch.ProfileReceiver"
            android:enabled="true" />
    </application>

</manifest>