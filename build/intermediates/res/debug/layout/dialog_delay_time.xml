<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time to Stay"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/edit_text_time"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/edit_text_min"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Minute"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView21"
        android:layout_alignBottom="@+id/edit_text_min"
        android:layout_toRightOf="@+id/edit_text_min"
        android:layout_toEndOf="@+id/edit_text_min" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hour"
        android:id="@+id/textView20"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/edit_text_time"
        android:layout_toEndOf="@+id/edit_text_time"
        android:layout_alignBottom="@+id/edit_text_time" />

</RelativeLayout>

