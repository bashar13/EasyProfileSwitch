<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_material_dark"
    tools:context="com.bashar.easyprofileswitch.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set Volume Level"
        android:typeface="sans"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:textColor="@color/primary_material_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:background="@android:color/holo_green_dark"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Normal Level"
        android:textColor="@color/primary_material_light"
        android:id="@+id/textView9"
        android:typeface="sans"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:layout_below="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:id="@+id/spinner_normal"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignRight="@+id/line"
        android:layout_alignEnd="@+id/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Min Level"
        android:id="@+id/textView10"
        android:layout_marginTop="3dp"
        android:textColor="@color/primary_material_light"
        android:textSize="18sp"
        android:typeface="sans"
        android:layout_below="@+id/spinner_normal"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_min"
        android:layout_below="@+id/spinner_normal"
        android:layout_alignRight="@+id/spinner_normal"
        android:layout_alignEnd="@+id/spinner_normal" />

    <!--<View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:id="@+id/line2"
        android:background="@android:color/holo_green_dark"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Schedule Profile"
        android:textColor="@color/primary_material_light"
        android:layout_marginTop="28dp"
        android:typeface="sans"
        android:textSize="20sp"
        android:id="@+id/textView13"
        android:layout_below="@+id/spinner_min"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/line1"
        android:background="@android:color/holo_green_dark"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <ExpandableListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandable_profile_settings"
        android:layout_below="@+id/line1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
